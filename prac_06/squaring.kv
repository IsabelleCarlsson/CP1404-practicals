BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_number
            text: '7'
            font_size: 52
            multiline: False
        Button:
            text: 'Square'
            font_size: 30
            # the following line specifies the function in the app class to call when the button is pressed
            on_press: app.handle_calculate(float(input_number.text))
        Label:
            id: output_label
            font_size: 48
            color: (1, 0.7529411764705882, 0.796078431372549, 1)
    BoxLayout:
        orientation: 'vertical'
        Label:
            font_size: 24
            text: 'Enter a number and press "Square"'